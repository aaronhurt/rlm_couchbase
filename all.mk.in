TARGETNAME	:= @targetname@

ifneq "$(TARGETNAME)" ""
TARGET		:= $(TARGETNAME).a
endif

SOURCES		:= $(TARGETNAME).c util.c callbacks.c

SRC_CFLAGS	:= @mod_cflags@
TGT_LDLIBS	:= @mod_ldflags@ -lcouchbase -ljson

# TODO: create man page
#MAN		:= rlm_couchbase.8

install: install.raddbdir $(R)$(raddbdir)/mods-available/couchbase

$(R)$(raddbdir)/mods-available/couchbase: src/modules/$(TARGETNAME)/couchbase.sample
	@$(INSTALL) -m 755 src/modules/$(TARGETNAME)/couchbase.sample $(R)$(raddbdir)/mods-available/couchbase

