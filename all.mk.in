TARGETNAME	:= @targetname@

ifneq "$(TARGETNAME)" ""
TARGET		:= $(TARGETNAME).a
endif

SOURCES		:= $(TARGETNAME).c util.c couchbase.c

SRC_CFLAGS	:= @mod_cflags@
TGT_LDLIBS	:= @mod_ldflags@ -lcouchbase -ljson

# TODO: create man page
#MAN		:= rlm_couchbase.8

install: $(R)$(raddbdir)/mods-available/couchbase

$(R)$(raddbdir)/mods-available/couchbase: src/modules/rlm_couchbase/couchbase.config
	@$(INSTALL) -m 644 src/modules/rlm_couchbase/couchbase.config $(R)$(raddbdir)/mods-available/couchbase
